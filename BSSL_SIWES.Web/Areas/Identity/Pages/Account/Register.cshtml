                        alert("Wrong email or your record has not been registered by your school cordinator please check ")
                    }
                    else if (data == "exist") {

                        alert("Account already exist ");
                        $("#txtemail").val("");
                    }
                    else if (data == "syserr") {

                        alert("System error: Please try again or contact adminitrator  ")
                    }
                    else {
                        $("#txtname").val(data);
                    }
