@page
@model BSSL_SIWES.Web.Areas.Identity.Pages.Account.RegisterModel
@{
    //ViewData["Title"] = "Register";
    Layout = "_RegLayout";
}

<h1>@ViewData["Title"]</h1>
<div class="content-wrapper" style="margin:0 auto; background-color:#fff; display:table">
    <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Student Registration as a User</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form method="post" >
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Input.MatricNo">Matric Number</label>
                                 
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                        </div>
                                        <input type="text" asp-for="Input.MatricNo" class="form-control" placeholder="Matric Number">
                                        <span asp-validation-for="Input.MatricNo" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Input.Name">Name</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                        </div>
                                        <input asp-for="Input.Name" class="form-control" placeholder="Name">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">

                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-evenlope"></i></span>
                                        </div>
                                        <input asp-for="Input.Email" class="form-control" placeholder="Email">
                                    </div>
                                </div>
                            </div>


                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Input.Password">Password</label>
                                    <div class="input-group">
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-lock"></span>
                                            </div>
                                        </div>
                                        <input type="password" asp-for="Input.Password" class="form-control" placeholder="Password">
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                    <div class="input-group">
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-lock"></span>
                                            </div>
                                        </div>
                                        <input type="password" asp-for="Input.ConfirmPassword" class="form-control" placeholder="Retype-password">
                                    </div>
                                </div>

                            </div>
                            <!-- /.card-body -->

                            <div class="justify-content-center" style="margin-left:35%;  margin-bottom:3%;">
                                <input type="submit" value="Submit" class="btn btn-primary"/>  
                            </div>
                        </div>

                    </div>
                </form>
            
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
