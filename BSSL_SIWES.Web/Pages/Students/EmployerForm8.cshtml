        crossorigin="anonymous"></script>
<!-- page script -->
<script type="text/javascript">
    $(document).ready(function () {
         $("#btnShowModal").click(function () {
            //var StudentName = $("#studentSelected option:selected").val();
            //var studentDesc = $("#studentSelected option:selected").text();
            //if (StudentName == "-1") {
            //    alert("PLEASE SELECT STUDENT TO VIEW DETAILS OF DAILY/WEEKLY RECORDS");
            //        return false;
            //}
            $("#loginModal").modal('show');
             //$("#divreject2").modal('show');
             //$('#monthname').html("DAILY/WEEKLY RECORDS OF " + studentDesc.toUpperCase() + "")
        });
        $("#btnHideModal").click(function () {
            $("#loginModal").modal('hide');
        }); 




        $('.textarea').summernote();
        var today = new Date();
        var dd = String(today.getDate()).padStart(2, '0');
        var mm = String(today.getMonth() + 1).padStart(2, '0'); //January is 0!
        var yyyy = today.getFullYear();
        today = dd + '/' + mm + '/' + yyyy;
        $('#certdate').val(today);
    });
    function myFucntionAttached() {
        myAttached = $('#attachedBefore').val();
        if (myAttached == "1" && !$(".ifYes").is(':visible')) {
            $(".ifYes").css('display', 'block');
        }
        else {
            $(".ifYes").css('display', 'none');
        }
    }
    function myFucntionAttachedAccept() {
        myAttached = $('#accept').val();
        if (myAttached == "1" && !$(".ifNo").is(':visible')) {
            $(".ifNo").css('display', 'block');
        }
        else {
            $(".ifNo").css('display', 'none');
        }
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
