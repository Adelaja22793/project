@page
@model BSSL_SIWES.Web.Pages.Students.DailyListModel
@{
    ViewData["Title"] = "DailyList";
}

<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header" id="myDay">
            <h3 class="card-title justify-content-center">Daily Record of Activities</h3>
        </div>
        <div  class="justify-content-center" style="margin-left:30%; margin-top:1.5%;">
            <button type="button" onclick="pageRedirect()" class="btn btn-info">Back to Daily Activities Page</button>
        </div>
        <table id="example2" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th style="width:0.25%; text-align:center">S/N</th>
                    <th style="width:8%; text-align:center">Week End Date</th>
                    <th style="width:5%; text-align:center">Week Day</th>
                    <th style="width:5%; text-align:center">Date</th>
                    <th style="width:45%; text-align:center">Summary of Activities</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.DailyActivitiesLists.Count; i++)
                {
                    var items = Model.DailyActivitiesLists[i];
                    string s = items.DayDate.ToString("dd/M/yyyy");
                    <tr>
                        <td class="se_no @i" style="width:0.25%; text-align:left">@(i + 1)</td>
                        <td class="matricNo @i" style="width:8%; text-align:left">@items.DailyActivities.WeekNumber</td>
                        <td class="name @i" style="width:5%; text-align:left">@items.WeekDayName</td>
                        <td class="courseName @i" style="width:5%; text-align:left">@s</td>
                        <td class="schoolName @i" style="width:45%; text-align:left">@items.DayDescription.ToString().Trim()</td>

                        @*<td style="width:10%;">
                            <input type="hidden" class="studentId @i" value="@items.Id" />
                            <a id="mySuspend" AddreSuspend="@i" asp-route-id="@items.Id">Suspend</a>
                        </td>*@

                    </tr>
                }

            </tbody>
            <tfoot>
                <tr>
                    <th style="width:0.25%; text-align:center">S/N</th>
                    <th style="width:8%; text-align:center">Week End Date</th>
                    <th style="width:5%; text-align:center">Week Day</th>
                    <th style="width:5%; text-align:center">Date</th>
                    <th style="width:45%; text-align:center">Summary of Activities</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
<script type="text/javascript">
    function pageRedirect() {
        var baseUrl = window.location.origin;
        window.location.href = baseUrl + '/Students/DailyActivities';
    }
</script>