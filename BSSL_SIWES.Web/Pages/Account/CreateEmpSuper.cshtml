                                    <div class="danger">
                                        <span asp-validation-for="Input.PhoneNo" class="text-danger"></span>
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-evenlope"></i></span>
                                        </div>
                                        <input asp-for="Input.PhoneNo" id="txtphoneno" class="form-control" placeholder="Enter Phone Number">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">

                                    <label asp-for="Input.Password">Password</label>
                                    <div class="danger">
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-lock"></span>
                                            </div>
                                        </div>
                                        <input type="password" asp-for="Input.Password" class="form-control" placeholder="Password">
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                    <div class="danger">
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-lock"></span>
                                            </div>
                                        </div>
                                        <input type="password" asp-for="Input.ConfirmPassword" class="form-control" placeholder="Retype-password">
                                    </div>
                                </div>

                            </div>
                            <!-- /.card-body -->

                            <div class="justify-content-center" style="margin-left:35%;  margin-bottom:3%;">
                                <input type="submit" id="btncreate" value="Create Account" class="btn btn-primary" />
                            </div>
                        </div>

                    </div>
                </form>

            </div>
        </div>
    @*</div>
</div>*@

<!-- page script -->
<script type="text/javascript">
    $(document).ready(function () {

        $('#txtemail').on('change', function () {

            var email = $("#txtemail").val();
            d = {
                "Email": email
            }
            var baseUrl = window.location.origin;
            var url = baseUrl + '/API/RegEmpSuper/  ' + email;
            $.ajax({
                type: "GET",
                url: url,
                data: JSON.stringify(d),
                xhrFields: {
                    withCredentials: true
                },
                
                contentType: "application/json; charset=utf-8",
                error: function (data) {
                    //console.log(data);
                    alert(data.responseText);

                },
                failure: function (data) {
                    alert(data.responseText);
                },
                success: function (data) {
                   alert(data);
                   if (data == "exist") {

                        alert("Account already exist ");
                        $("#txtemail").val("");
            
                    }
                    else if (data == "notexist") {

                      // do nothings
                   }
                        else if (data == "syserr") {

                        alert("System error: Please try again or contact adminitrator  ")
                    }
                    else {
                        alert("System error: Please try again or contact adminitrator  ")
                    }
                  
                },
            });
        });

        $('#btncreate').click(function () {
 
            $('.loader').show(300);
        });
    })
</script>
@section Scripts {
