@page
@model BSSL_SIWES.Web.Pages.Account.CreateEmpSuperModel
@{
    //ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>
@*<div class="content-wrapper" style="margin:0 auto; background-color:#fff; display:table">
    <div class="row">*@
        <div class="col-md-8" style="margin:0 auto; display:table">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Create Employer Supervisor Account</h3>
                </div>
                <div>
                    @if (!string.IsNullOrWhiteSpace(Model.successm))
                    {
                        <div class="alert alert-dismissible alert-success">
                            @Model.successm
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(Model.errorm))
                    {
                        <div class="alert alert-dismissible alert-danger">
                            @Model.errorm
                        </div>
                    }
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form method="post">
                    <div class="card-body">
                        @*<div class="spinner-border text-primary loading-img loade" role="status">
            <span class="sr-only">Loading...</span>
        </div>*@
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Input.Email">Email</label>
                                    <div class="danger">
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-evenlope"></i></span>
                                        </div>
                                        <input asp-for="Input.Email" id="txtemail" class="form-control" placeholder="Email">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Input.Name">Name</label>
                                    <div class="danger">
                                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-evenlope"></i></span>
                                        </div>
                                        <input asp-for="Input.Name" id="txtemail" class="form-control" placeholder="Surname othername">
                                    </div>
                                </div>
                            </div>
